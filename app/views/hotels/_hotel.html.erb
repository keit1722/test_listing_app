<div class="col-lg-12 col-md-12">
  <div class="listing-item-container list-layout" data-marker-id="<%= hotel_counter + 1 %>" data-latitude="<%= hotel.lat %>" data-longitude="<%= hotel.lng %>">
    <%= link_to hotel_path(hotel), class: "listing-item" do %>

      <!-- Image -->
      <div class="listing-item-image">
        <% if hotel.images.attached? %>
         <%= image_tag hotel.images.first, class: "listing-image" %>
        <% end %>
         <span class="tag listing-category" style="visibility:hidden;"></span>
      </div>

      <!-- Content -->
      <div class="listing-item-content">

        <div class="listing-item-inner">
          <h3 class="listing-name"><%= hotel.name %></h3>
          <span class="listing-address"><%= hotel.address %></span>
        </div>

      </div>
    <% end %>
  </div>
</div>
