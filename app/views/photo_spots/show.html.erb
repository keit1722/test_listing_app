  <!-- Slider
================================================== -->
  <% if @photo_spot.images.attached? %>
    <div class="listing-slider mfp-gallery-container margin-bottom-0">
      <%= render partial: 'photo_spot_image', collection: @photo_spot.images %>
    </div>
  <% end %>

  <!-- Content
================================================== -->
  <div class="container">
    <div class="row sticky-wrapper">
      <div class="col-lg-8 col-md-8 padding-right-30">

        <!-- Titlebar -->
        <div id="titlebar" class="listing-titlebar">
          <div class="listing-titlebar-title">
            <h2>
              <%= @photo_spot.name %> 
            </h2>
            <span>
              <a href="#listing-location" class="listing-address">
                <i class="fa fa-map-marker"></i>
                <%= @photo_spot.address %>
              </a>
            </span>
          </div>
        </div>

        <!-- Location -->
        <div id="listing-location" class="listing-section">
          <h3 class="listing-desc-headline margin-top-60 margin-bottom-30">地図</h3>
          <div id="map-location-display" class="margin-top-25 margin-bottom-25" data-lat="<%= @photo_spot.lat %>" data-lng="<%= @photo_spot.lng %>"></div>
        </div>

        <% if current_user %>
          <div class="listing-share margin-top-40 margin-bottom-40 no-border" id="bookmark-area">
            <% if current_user.bookmark?(@photo_spot) %>
              <%= render 'unbookmark', photo_spot: @photo_spot %>
            <% else %>
              <%= render 'bookmark', photo_spot: @photo_spot %>
            <% end %>
          </div>
        <% end %>

      </div>

      <!-- Sidebar
  ================================================== -->
      <div class="col-lg-4 col-md-4 margin-top-75 sticky">

      </div>
      <!-- Sidebar / End -->

    </div>
  </div>
