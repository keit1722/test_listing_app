<div class="col-lg-12 col-md-12">
  <div class="listing-item-container list-layout" data-marker-id="<%= restaurant_counter + 1 %>" data-latitude="<%= restaurant.lat %>" data-longitude="<%= restaurant.lng %>">
    <%= link_to restaurant_path(restaurant), class: "listing-item" do %>

      <!-- Image -->
      <div class="listing-item-image">
        <% if restaurant.images.attached? %>
         <%= image_tag restaurant.images.first, class: "listing-image" %>
        <% end %>
        <span class="tag listing-category"><%= restaurant.restaurant_categories.map{ |restaurant_category| restaurant_category.name }.join("/") %></span>
      </div>

      <!-- Content -->
      <div class="listing-item-content">

        <div class="listing-item-inner">
          <h3 class="listing-name"><%= restaurant.name %></h3>
          <span class="listing-address"><%= restaurant.address %></span>
        </div>

      </div>
    <% end %>
  </div>
</div>
