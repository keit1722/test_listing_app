<div class="col-lg-12 col-md-12">
  <div class="listing-item-container list-layout" data-marker-id="<%= activity_counter + 1 %>" data-latitude="<%= activity.lat %>" data-longitude="<%= activity.lng %>">
    <%= link_to activity_path(activity), class: "listing-item" do %>

      <!-- Image -->
      <div class="listing-item-image">
        <% if activity.images.attached? %>
         <%= image_tag activity.images.first, class: "listing-image" %>
        <% end %>
         <span class="tag listing-category" style="visibility:hidden;"></span>
      </div>

      <!-- Content -->
      <div class="listing-item-content">

        <div class="listing-item-inner">
          <h3 class="listing-name"><%= activity.name %></h3>
          <span class="listing-address"><%= activity.address %></span>
        </div>

      </div>
    <% end %>
  </div>
</div>
