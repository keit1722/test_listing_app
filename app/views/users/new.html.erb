<!-- Wrapper -->
<div id="wrapper">

  <!-- Header Container
================================================== -->
  <header id="header-container">

    <!-- Header -->
    <%= render 'shared/header' %>
    <!-- Header / End -->

  </header>
  <div class="clearfix"></div>
  <!-- Header Container / End -->


  <!-- Titlebar
================================================== -->
  <%= render 'shared/breadcrumbs', { title: "新規ユーザー登録" } %>

  <!-- Content
================================================== -->


  <!-- Container -->
  <div class="container">

    <div class="row">
      <div class="col-lg-12">
        <div id="add-listing" class="separated-form">
          <%= form_with model: @user, url: signup_path do |f| %>
            <%= render 'shared/flash_messages' %>
            <%= render 'shared/error_messages', model: f.object %>

            <!-- Section -->
            <div class="add-listing-section">

              <!-- Headline -->
              <div class="add-listing-headline">
              </div>

              <!-- Row -->
              <div class="row with-forms margin-bottom-20">

                <!-- Last name -->
                <div class="col-md-6">
                  <h5><%= f.label :last_name %></h5>
                  <%= f.text_field :last_name %>
                </div>

                <!-- Fast name -->
                <div class="col-md-6">
                  <h5><%= f.label :first_name %></h5>
                  <%= f.text_field :first_name %>
                </div>

              </div>
              <!-- Row / End -->


              <!-- Row -->
              <div class="row with-forms margin-bottom-20">
                <!-- Slug -->
                <div class="col-md-12">
                  <h5><%= f.label :username %></h5>
                  <p>他のユーザーの目に触れる箇所になります。
                  <br>50文字以内で入力してください。後から変更が可能です。</p>
                  <%= f.text_field :username %>
                </div>
              </div>
              <!-- Row / End -->


              <!-- Row -->
              <div class="row with-forms margin-bottom-20">
                <!-- Email -->
                <div class="col-md-12">
                  <h5><%= f.label :email %></h5>
                  <p>誤りがないようにご注意ください。</p>
                  <%= f.email_field :email %>
                </div>
              </div>
              <!-- Row / End -->


              <!-- Row -->
              <div class="row with-forms">
                <!-- Password -->
                <div class="col-md-6">
                  <h5><%= f.label :password %></h5>
                  <p>6文字以上でパスワードを決めてください。</p>
                  <%= f.password_field :password %>
                </div>

                <!-- Password confirmation -->
                <div class="col-md-6">
                  <h5><%= f.label :password_confirmation %></h5>
                  <p>パスワードを再度入力してください。</p>
                  <%= f.password_field :password_confirmation %>
                </div>
              </div>
              <!-- Row / End -->

            </div>
            <!-- Section / End -->

            <%= f.submit nil, class: "button margin-top-40" %>

          <% end %>
        </div>
      </div>
    </div>

  </div>
  <!-- Content / End -->
  <!-- Container / End -->



  <!-- Footer
================================================== -->
  <div id="footer" class="margin-top-60">
    <!-- Main -->
    <%= render 'shared/footer' %>

  </div>
  <!-- Footer / End -->


  <!-- Back To Top Button -->
  <div id="backtotop"><a href="#"></a></div>


</div>
<!-- Wrapper / End -->
