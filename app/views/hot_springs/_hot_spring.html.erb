<div class="col-lg-12 col-md-12">
  <div class="listing-item-container list-layout" data-marker-id="<%= hot_spring_counter + 1 %>" data-latitude="<%= hot_spring.lat %>" data-longitude="<%= hot_spring.lng %>">
    <%= link_to hot_spring_path(hot_spring), class: "listing-item" do %>

      <!-- Image -->
      <div class="listing-item-image">
        <% if hot_spring.images.attached? %>
         <%= image_tag hot_spring.images.first, class: "listing-image" %>
        <% end %>
         <span class="tag listing-category" style="visibility:hidden;"></span>
      </div>

      <!-- Content -->
      <div class="listing-item-content">

        <div class="listing-item-inner">
          <h3 class="listing-name"><%= hot_spring.name %></h3>
          <span class="listing-address"><%= hot_spring.address %></span>
        </div>

      </div>
    <% end %>
  </div>
</div>
