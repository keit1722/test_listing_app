<%= render 'shared/breadcrumbs_mypage', { title: "登録したスキー場" } %>

<div class="row">

  <!-- Listings -->
  <div class="col-lg-12 col-md-12">
    <div class="dashboard-list-box margin-top-0">
      <% if @ski_areas.size == 0 %>
        <h4>登録したスキー場はありません</h4>
      <% else %>
        <ul>
          <%= render @ski_areas %>
        </ul>
      <% end %>
    </div>

    <div class="clearfix"></div>
    <div class="pagination-container margin-top-30 margin-bottom-0">
      <%= paginate @ski_areas %>
    </div>

  </div>
