<!-- Wrapper -->
<div id="wrapper">

  <!-- Header Container
================================================== -->
  <header id="header-container">

    <!-- Header -->
    <div id="header">
      <div class="container">
        <%= render 'shared/header' %>
      </div>
    </div>
    <!-- Header / End -->
    
  </header>
  <div class="clearfix"></div>
  <!-- Header Container / End -->


  <!-- Titlebar
================================================== -->
  <%= render 'shared/breadcrumbs', { title: "NEWS一覧" } %>


  <!-- Content
================================================== -->
  <div class="container">

    <!-- Blog Posts -->
    <div class="blog-page">
      <div class="row">
        <div class="col-lg-9 col-md-8 padding-right-30">

          <!-- Blog Post -->
          <%= render partial: 'listing_partial/post', collection: posts, as: 'post' %>
          <!-- Blog Post / End -->


          <!-- Pagination -->
          <div class="clearfix"></div>
          <div class="row">
            <div class="col-md-12">
              <!-- Pagination -->
              <div class="pagination-container margin-bottom-40">
                <%= paginate posts %>
              </div>
            </div>
          </div>
          <!-- Pagination / End -->

        </div>

        <!-- Blog Posts / End -->


        <!-- Widgets -->
        <div class="col-lg-3 col-md-4">
          <div class="sidebar right">

            <!-- Widget -->
            <div class="widget margin-top-40">

              <h3>最近の投稿</h3>
              <ul class="widget-tabs">

                <%= render partial: 'listing_partial/side_posts', collection: posts.three, as: 'post' %>

              </ul>

            </div>
            <!-- Widget / End-->


            <div class="clearfix"></div>
            <div class="margin-bottom-40"></div>
          </div>
        </div>
      </div>
      <!-- Sidebar / End -->


    </div>
  </div>



  <!-- Footer
================================================== -->
  <div id="footer" class="margin-top-60">
    <!-- Main -->
    <%= render 'shared/footer' %>

  </div>
  <!-- Footer / End -->


  <!-- Back To Top Button -->
  <div id="backtotop"><a href="#"></a></div>


</div>
<!-- Wrapper / End -->

