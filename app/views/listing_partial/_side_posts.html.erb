 <li>
  <div class="widget-content">
    <div class="widget-thumb">
      <% if post.image.attached? %>
        <%= link_to image_tag(post.image), polymorphic_path([post.postable, post]) %>
      <% end %>
    </div>
    <div class="widget-text">
      <h5>
        <%= link_to post.title, polymorphic_path([post.postable, post]) %>
      </h5>
      <span><%= post.decorate.format_created_at %></span>
    </div>
    <div class="clearfix"></div>
  </div>
</li>
