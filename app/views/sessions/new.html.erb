<!-- Wrapper -->
<div id="wrapper">

  <!-- Header Container
================================================== -->
  <header id="header-container">

    <!-- Header -->
    <%= render 'shared/header' %>
    <!-- Header / End -->

  </header>
  <div class="clearfix"></div>
  <!-- Header Container / End -->


  <!-- Titlebar
================================================== -->
  <div id="titlebar" class="gradient">
    <div class="container">
      <div class="row">
        <div class="col-md-12">

          <h2><i class="sl sl-icon-login"></i> ログイン</h2>

          <!-- Breadcrumbs -->
          <nav id="breadcrumbs">
            <ul>
              <li><a href="#">ホーム</a></li>
              <li>ログイン</li>
            </ul>
          </nav>

        </div>
      </div>
    </div>
  </div>


  <!-- Content
================================================== -->


  <!-- Container -->
  <div class="container">

    <div class="row">
      <div class="col-lg-12">
        <div id="add-listing" class="separated-form">
          <%= form_with model: @user do |f| %>
            <%= render 'shared/flash_messages' %>

            <!-- Section -->
            <div class="add-listing-section">

              <!-- Headline -->
              <div class="add-listing-headline">
              </div>

              <!-- Row -->
              <div class="row with-forms margin-bottom-20">
                <!-- Email -->
                <div class="col-md-12">
                  <h5><%= f.label :email, "メールアドレス" %></h5>
                  <%= f.email_field :email %>
                </div>
              </div>
              <!-- Row / End -->


              <!-- Row -->
              <div class="row with-forms margin-bottom-20">
                <!-- Slug -->
                <div class="col-md-12">
                  <h5><%= f.label :password, "パスワード" %></h5>
                  <%= f.password_field :password %>
                </div>
              </div>
              <!-- Row / End -->

            </div>
            <!-- Section / End -->

            <%= f.submit "ログイン", class: "button margin-top-40" %>

          <% end %>
        </div>
      </div>
    </div>

  </div>
  <!-- Content / End -->
  <!-- Container / End -->



  <!-- Footer
================================================== -->
  <div id="footer" class="margin-top-60">
    <!-- Main -->
    <%= render 'shared/footer' %>

  </div>
  <!-- Footer / End -->


  <!-- Back To Top Button -->
  <div id="backtotop"><a href="#"></a></div>


</div>
<!-- Wrapper / End -->
