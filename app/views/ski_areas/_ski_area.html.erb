<div class="col-lg-12 col-md-12">
  <div class="listing-item-container list-layout" data-marker-id="<%= ski_area_counter + 1 %>" data-latitude="<%= ski_area.lat %>" data-longitude="<%= ski_area.lng %>">
    <%= link_to ski_area_path(ski_area), class: "listing-item" do %>

      <!-- Image -->
      <div class="listing-item-image">
        <% if ski_area.images.attached? %>
         <%= image_tag ski_area.images.first, class: "listing-image" %>
        <% end %>
         <span class="tag listing-category" style="visibility:hidden;"></span>
      </div>

      <!-- Content -->
      <div class="listing-item-content">

        <div class="listing-item-inner">
          <h3 class="listing-name"><%= ski_area.name %></h3>
          <span class="listing-address"><%= ski_area.address %></span>
        </div>

      </div>
    <% end %>
  </div>
</div>
